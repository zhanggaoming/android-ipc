<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoActivity">

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/takePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takePicture"
        android:text="takePicture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/takeFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takeFrame"
        android:text="takeFrame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/takePicture" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/stopTakeFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopTakeFrame"
        android:text="stopTakeFrame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/takeFrame" />


</androidx.constraintlayout.widget.ConstraintLayout>